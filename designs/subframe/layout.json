{
  "version": "1.0",
  "screens": {
    "LaunchScreen": {
      "type": "screen",
      "layout": {
        "type": "flex",
        "direction": "column",
        "justifyContent": "center",
        "alignItems": "center",
        "height": "100vh",
        "backgroundColor": "#FFFFFF"
      },
      "components": [
        {
          "type": "text",
          "content": "Trace",
          "style": {
            "fontSize": "4rem",
            "fontWeight": "bold",
            "color": "#111827"
          }
        },
        {
          "type": "text",
          "content": "Find the original source",
          "style": {
            "fontSize": "1.5rem",
            "color": "#4B5563",
            "marginTop": "1rem"
          }
        }
      ]
    },
    "SearchPage": {
      "type": "screen",
      "layout": {
        "type": "flex",
        "direction": "column",
        "justifyContent": "center",
        "alignItems": "center",
        "height": "100vh",
        "backgroundColor": "#FFFFFF",
        "padding": "1rem"
      },
      "components": [
        {
          "type": "input",
          "placeholder": "Search URL, text, image...",
          "style": {
            "width": "100%",
            "maxWidth": "48rem",
            "padding": "1rem 1.5rem",
            "borderRadius": "1rem",
            "border": "1px solid #D1D5DB",
            "fontSize": "1.125rem"
          }
        }
      ]
    },
    "ResultsPage": {
      "type": "screen",
      "layout": {
        "type": "flex",
        "direction": "column",
        "padding": "1rem",
        "backgroundColor": "#F9FAFB",
        "minHeight": "100vh"
      },
      "components": [
        {
          "type": "text",
          "content": "Results for: {query}",
          "style": {
            "fontSize": "1.5rem",
            "fontWeight": "bold",
            "color": "#111827",
            "marginBottom": "2rem"
          }
        },
        {
          "type": "grid",
          "columns": 2,
          "gap": "2rem",
          "components": [
            {
              "type": "card",
              "title": "Original Source",
              "style": {
                "backgroundColor": "#FFFFFF",
                "padding": "1.5rem",
                "borderRadius": "1rem",
                "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
              }
            },
            {
              "type": "card",
              "title": "Most Viral",
              "style": {
                "backgroundColor": "#FFFFFF",
                "padding": "1.5rem",
                "borderRadius": "1rem",
                "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
              }
            }
          ]
        }
      ]
    }
  }
} 